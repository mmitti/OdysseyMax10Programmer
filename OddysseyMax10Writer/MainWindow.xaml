<Window x:Class="OddysseyMax10Writer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OddysseyMax10Writer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Loaded="Grid_Loaded">
        <Button x:Name="write" Content="Write" HorizontalAlignment="Left" Margin="114,139,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBox x:Name="textPath" HorizontalAlignment="Left" Height="23" Margin="92,98,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
        <Button x:Name="open" Content="Open" HorizontalAlignment="Left" Margin="287,110,0,0" VerticalAlignment="Top" Width="75" Click="open_Click"/>
        <TextBox x:Name="log" HorizontalAlignment="Left" Height="86" Margin="92,212,0,0" Text="TextBox" VerticalAlignment="Top" Width="328" IsReadOnly="True" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto" TextChanged="log_TextChanged"/>
        <Button x:Name="program" Content="Program" HorizontalAlignment="Left" Margin="212,139,0,0" VerticalAlignment="Top" Width="75" Click="program_Click"/>

    </Grid>
</Window>
